json.array! @chapter_infos do |info|
  json.object! do
    json.extract! info,
                  :id,
                  :name,
                  :author_name,
                  :slug,
                  :language_name

    json.translated_name do
      translated_name = info.translated_name
      json.object! do
        json.extract! translated_name, :name, :language_name
      end
    end
  end
end